@model MenStyle.Web.Models.Category
@{
    ViewData["Title"] = "Add Category";
}
<div class="admin-header">
    <h1 class="admin-title">Add Category</h1>
    <a asp-area="Admin" asp-controller="Categories" asp-action="Index" class="btn-dark"><i class="fas fa-arrow-left me-1"></i> Back</a>
</div>
<div style="max-width: 500px;">
    <form asp-area="Admin" asp-controller="Categories" asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <div class="form-card">
            <div class="mb-3">
                <label class="form-label-custom" asp-for="Name">Category Name</label>
                <input asp-for="Name" class="form-input-custom" placeholder="e.g. Shirts" required />
            </div>
            <div class="mb-4">
                <label class="form-label-custom" asp-for="Description">Description</label>
                <textarea asp-for="Description" class="form-input-custom" rows="3" placeholder="Short description..."></textarea>
            </div>
            <div class="d-flex gap-3">
                <button type="submit" class="btn-gold"><i class="fas fa-plus me-1"></i> Create</button>
                <a asp-area="Admin" asp-controller="Categories" asp-action="Index" class="btn-dark">Cancel</a>
            </div>
        </div>
    </form>
</div>
