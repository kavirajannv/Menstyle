@model IEnumerable<MenStyle.Web.Models.Product>
@{
    ViewData["Title"] = "Manage Products";
}

<div class="admin-header">
    <h1 class="admin-title">Products</h1>
    <a asp-area="Admin" asp-controller="Products" asp-action="Create" class="btn-gold">
        <i class="fas fa-plus me-1"></i> Add Product
    </a>
</div>

<div class="form-card">
    @if (!Model.Any())
    {
        <div class="text-center py-4" style="color: var(--gray);">No products found.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="dark-table">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Stock</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>
                                <img src="@product.ImageUrl" alt="@product.Name"
                                     style="width: 40px; height: 50px; object-fit: cover; object-position: top; border-radius: var(--radius);"
                                     onerror="this.src='https://via.placeholder.com/40x50/1E1E1E/C9A84C?text=MS'" />
                            </td>
                            <td>
                                <div style="font-weight: 500; color: var(--white); font-size: 0.875rem;">@product.Name</div>
                                @if (product.IsFeatured) {
                                    <span class="status-badge" style="font-size: 0.6rem; padding: 0.15rem 0.4rem; background: rgba(201,168,76,0.1); color: var(--gold); border-color: rgba(201,168,76,0.2);">Featured</span>
                                }
                            </td>
                            <td style="color: var(--gray-light); font-size: 0.875rem;">@product.Category?.Name</td>
                            <td style="color: var(--gold); font-weight: 600; font-size: 0.875rem;">$@product.Price.ToString("0.00")</td>
                            <td style="font-size: 0.875rem;">
                                @if (product.StockQuantity > 10)
                                {
                                    <span style="color: #34d399;">@product.StockQuantity</span>
                                }
                                else if (product.StockQuantity > 0)
                                {
                                    <span style="color: #fbbf24;">@product.StockQuantity</span>
                                }
                                else
                                {
                                    <span style="color: #f87171;">0</span>
                                }
                            </td>
                            <td>
                                @if (product.IsActive)
                                {
                                    <span class="status-badge status-delivered" style="font-size: 0.65rem;">Active</span>
                                }
                                else
                                {
                                    <span class="status-badge status-cancelled" style="font-size: 0.65rem;">Inactive</span>
                                }
                            </td>
                            <td>
                                <div class="d-flex gap-2">
                                    <a asp-area="Admin" asp-controller="Products" asp-action="Edit" asp-route-id="@product.Id"
                                       class="btn-dark" style="font-size: 0.75rem; padding: 0.3rem 0.65rem;">
                                        <i class="fas fa-pencil"></i>
                                    </a>
                                    <form asp-area="Admin" asp-controller="Products" asp-action="Delete" asp-route-id="@product.Id" method="post"
                                          onsubmit="return confirm('Delete this product?')">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn-dark" style="font-size: 0.75rem; padding: 0.3rem 0.65rem; color: #f87171; border-color: rgba(239,68,68,0.3);">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
