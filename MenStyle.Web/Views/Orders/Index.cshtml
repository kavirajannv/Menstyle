@model IEnumerable<MenStyle.Web.Models.Order>
@{
    ViewData["Title"] = "My Orders";
}

<div class="container py-5">
    <h1 class="section-title mb-5">My Orders</h1>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <div style="font-size: 4rem; color: var(--gray); margin-bottom: 1.5rem;"><i class="fas fa-box-open"></i></div>
            <h3 style="font-family: 'Playfair Display', serif; color: var(--white);">No orders yet</h3>
            <p style="color: var(--gray);">Start shopping to see your orders here.</p>
            <a asp-controller="Shop" asp-action="Index" asp-area="" class="btn-gold mt-3">Shop Now</a>
        </div>
    }
    else
    {
        <div class="d-flex flex-column gap-3">
            @foreach (var order in Model)
            {
                var statusClass = order.Status switch {
                    "Pending" => "status-pending",
                    "Processing" => "status-processing",
                    "Shipped" => "status-shipped",
                    "Delivered" => "status-delivered",
                    "Cancelled" => "status-cancelled",
                    _ => "status-pending"
                };

                <div class="form-card" style="padding: 1.25rem;">
                    <div class="d-flex flex-wrap align-items-center justify-content-between gap-3 mb-3">
                        <div class="d-flex align-items-center gap-3">
                            <div>
                                <div style="font-size: 0.7rem; color: var(--gray); letter-spacing: 1px; text-transform: uppercase;">Order</div>
                                <div style="font-family: 'Playfair Display', serif; color: var(--gold); font-weight: 700; font-size: 1.1rem;">#@order.Id</div>
                            </div>
                            <div style="width: 1px; height: 36px; background: var(--border-dark);"></div>
                            <div>
                                <div style="font-size: 0.7rem; color: var(--gray); letter-spacing: 1px; text-transform: uppercase;">Date</div>
                                <div style="color: var(--white); font-size: 0.875rem;">@order.OrderDate.ToString("MMM dd, yyyy")</div>
                            </div>
                            <div style="width: 1px; height: 36px; background: var(--border-dark);"></div>
                            <div>
                                <div style="font-size: 0.7rem; color: var(--gray); letter-spacing: 1px; text-transform: uppercase;">Total</div>
                                <div style="color: var(--gold); font-weight: 700;">$@order.TotalAmount.ToString("0.00")</div>
                            </div>
                        </div>
                        <div class="d-flex align-items-center gap-3">
                            <span class="status-badge @statusClass">@order.Status</span>
                            <a asp-controller="Orders" asp-action="Details" asp-route-id="@order.Id" asp-area="" class="btn-dark" style="font-size: 0.75rem; padding: 0.4rem 0.85rem;">
                                View Details <i class="fas fa-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                    <div class="d-flex flex-wrap gap-2">
                        @foreach (var detail in order.OrderDetails)
                        {
                            <div style="display: flex; align-items: center; gap: 0.5rem; background: var(--dark-3); border-radius: var(--radius); padding: 0.35rem 0.75rem; font-size: 0.75rem; color: var(--gray-light);">
                                @detail.Product?.Name <span style="color: var(--gray);">Ã—@detail.Quantity</span>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>
