@model MenStyle.Web.Models.Order
@{
    ViewData["Title"] = "Secure Payment";
}

<div class="container py-5">
    <div class="success-page" style="max-width: 600px; margin: 0 auto; text-align: center;">
        <div class="success-icon" style="background: rgba(201,168,76,0.1); color: var(--gold); border: 1px solid rgba(201,168,76,0.2);">
            <i class="fas fa-shield-halved"></i>
        </div>
        <h1 style="font-family: 'Playfair Display', serif; font-size: 2rem; color: var(--white); margin-bottom: 0.5rem;">
            Secure Checkout
        </h1>
        <p style="color: var(--gray); margin-bottom: 2rem;">
            Order <strong style="color: var(--gold);">#@Model.Id</strong> is ready. Please complete the payment via Razorpay.
        </p>

        <div class="form-card mb-4" style="text-align: left;">
            <div class="d-flex justify-content-between mb-2">
                <span style="color: var(--gray-light);">Customer</span>
                <span style="color: var(--white);">@Model.FullName</span>
            </div>
            <div class="d-flex justify-content-between mb-2">
                <span style="color: var(--gray-light);">Amount to Pay</span>
                <span style="color: var(--gold); font-weight: 700;">$@Model.TotalAmount.ToString("0.00")</span>
            </div>
        </div>

        <button id="rzp-button1" class="btn-gold w-100" style="justify-content: center; padding: 1rem; font-size: 1rem;">
            <i class="fas fa-credit-card me-2"></i> Pay Now with Razorpay
        </button>

        <p style="font-size: 0.75rem; color: var(--gray); mt-4">
            <i class="fas fa-lock me-1"></i> Your payment is secured with 128-bit encryption.
        </p>
    </div>
</div>

<form asp-action="VerifyPayment" method="post" id="razorpay-form">
    @Html.AntiForgeryToken()
    <input type="hidden" name="razorpay_payment_id" id="razorpay_payment_id" />
    <input type="hidden" name="razorpay_order_id" id="razorpay_order_id" />
    <input type="hidden" name="razorpay_signature" id="razorpay_signature" />
    <input type="hidden" name="orderId" value="@Model.Id" />
</form>

@section Scripts {
    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
    <script>
        var options = {
            "key": "@ViewBag.RazorpayKey",
            "amount": "@ViewBag.Amount",
            "currency": "USD",
            "name": "MenStyle",
            "description": "Order #@Model.Id",
            "image": "/img/logo.png",
            "order_id": "@ViewBag.RazorpayOrderId",
            "handler": function (response){
                document.getElementById('razorpay_payment_id').value = response.razorpay_payment_id;
                document.getElementById('razorpay_order_id').value = response.razorpay_order_id;
                document.getElementById('razorpay_signature').value = response.razorpay_signature;
                document.getElementById('razorpay-form').submit();
            },
            "prefill": {
                "name": "@Model.FullName",
                "email": "@User.Identity?.Name",
                "contact": "@Model.Phone"
            },
            "notes": {
                "address": "MenStyle Store"
            },
            "theme": {
                "color": "#C9A84C"
            }
        };
        var rzp1 = new Razorpay(options);
        document.getElementById('rzp-button1').onclick = function(e){
            rzp1.open();
            e.preventDefault();
        }
    </script>
}
