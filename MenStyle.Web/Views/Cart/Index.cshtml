@model MenStyle.Web.Models.ViewModels.CartViewModel
@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container py-5">
    <div class="breadcrumb-custom mb-4">
        <a asp-controller="Home" asp-action="Index" asp-area="">Home</a>
        <i class="fas fa-chevron-right" style="font-size: 0.6rem;"></i>
        <span class="breadcrumb-item-active">Shopping Cart</span>
    </div>
    
    <h1 class="section-title mb-5">Your Cart</h1>

    @if (!Model.Items.Any())
    {
        <div class="text-center py-5">
            <div style="font-size: 5rem; color: var(--gray); margin-bottom: 1.5rem;"><i class="fas fa-bag-shopping"></i></div>
            <h3 style="font-family: 'Playfair Display', serif; color: var(--white); margin-bottom: 1rem;">Your cart is empty</h3>
            <p style="color: var(--gray); margin-bottom: 2rem;">Discover our premium collection and find something you love.</p>
            <a asp-controller="Shop" asp-action="Index" asp-area="" class="btn-gold">
                <i class="fas fa-arrow-right me-1"></i> Start Shopping
            </a>
        </div>
    }
    else
    {
        <div class="row g-4">
            <!-- Cart Items -->
            <div class="col-lg-8">
                @foreach (var item in Model.Items)
                {
                    <div class="cart-item">
                        <img src="@item.Product?.ImageUrl" alt="@item.Product?.Name" class="cart-item-img"
                             onerror="this.src='https://via.placeholder.com/80x100/1E1E1E/C9A84C?text=MS'" />
                        <div>
                            <div class="product-category" style="margin-bottom: 0.25rem;">@item.Product?.Category?.Name</div>
                            <div style="font-family: 'Playfair Display', serif; font-size: 0.95rem; color: var(--white); margin-bottom: 0.5rem;">
                                @item.Product?.Name
                            </div>
                            <div style="color: var(--gold); font-weight: 600; font-size: 0.9rem;">
                                $@item.Product?.Price.ToString("0.00") each
                            </div>
                        </div>
                        <div class="d-flex flex-column align-items-end gap-2">
                            <div style="color: var(--gold); font-family: 'Playfair Display', serif; font-size: 1.1rem; font-weight: 700;">
                                $@item.Subtotal.ToString("0.00")
                            </div>
                            <form asp-controller="Cart" asp-action="Update" asp-area="" method="post" class="d-flex align-items-center gap-2">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="cartItemId" value="@item.Id" />
                                <input type="number" name="quantity" value="@item.Quantity" min="0" max="99" class="cart-qty-input"
                                       onchange="this.form.submit()" />
                            </form>
                            <form asp-controller="Cart" asp-action="Remove" asp-area="" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="cartItemId" value="@item.Id" />
                                <button type="submit" style="background: none; border: none; color: #f87171; font-size: 0.8rem; cursor: pointer; padding: 0;">
                                    <i class="fas fa-trash me-1"></i> Remove
                                </button>
                            </form>
                        </div>
                    </div>
                }
            </div>

            <!-- Order Summary -->
            <div class="col-lg-4">
                <div class="order-summary-card">
                    <h5 style="font-family: 'Playfair Display', serif; color: var(--white); margin-bottom: 1.25rem;">Order Summary</h5>
                    
                    @foreach (var item in Model.Items)
                    {
                        <div class="order-summary-row">
                            <span>@item.Product?.Name <span style="color: var(--gray);">Ã—@item.Quantity</span></span>
                            <span>$@item.Subtotal.ToString("0.00")</span>
                        </div>
                    }

                    <div class="order-summary-row">
                        <span>Subtotal</span>
                        <span>$@Model.Total.ToString("0.00")</span>
                    </div>
                    <div class="order-summary-row">
                        <span>Shipping</span>
                        <span style="color: #34d399;">@(Model.Total >= 100 ? "FREE" : "$9.99")</span>
                    </div>
                    <div class="order-summary-row total">
                        <span>Total</span>
                        <span class="price">$@((Model.Total >= 100 ? Model.Total : Model.Total + 9.99m).ToString("0.00"))</span>
                    </div>

                    <a asp-controller="Checkout" asp-action="Index" asp-area="" class="btn-gold w-100 mt-4" style="justify-content: center;">
                        <i class="fas fa-lock me-1"></i> Proceed to Checkout
                    </a>
                    <a asp-controller="Shop" asp-action="Index" asp-area="" class="btn-dark w-100 mt-2" style="justify-content: center;">
                        <i class="fas fa-arrow-left me-1"></i> Continue Shopping
                    </a>

                    @if (Model.Total < 100)
                    {
                        <div class="mt-3 text-center" style="font-size: 0.75rem; color: var(--gray);">
                            <i class="fas fa-truck me-1" style="color: var(--gold);"></i>
                            Add $@((100 - Model.Total).ToString("0.00")) more for free shipping
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>
